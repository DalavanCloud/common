<project name="common iitp project" default="jar">
    <description>
            Project for various tools
    </description>
	
	<property name="build.dir" value="build"/>
	<property name="src.dir" value="src"/>
	<property name="jar.dir" value="jar"/>
	<property name="classes.dir" value="${build.dir}/classes"/>
		
	<property name="jar.path" value="iitp-common.jar"/>
	<property environment="env"/>
	
	<!-- ================================= 
          target: clean              
         ================================= -->
    <target name="clean" depends="" description="Clean build directory">
        <delete dir="${build.dir}"/>
    </target>
	
	<!-- ================================= 
          target: compile              
         ================================= -->
    <target name="compile" depends="" description="Compile project">
        <mkdir dir="${classes.dir}"/>
    	<javac srcdir="${src.dir}"  destdir="${classes.dir}" classpath="${env.CLASSPATH}:/home/ant/java/jar/trove.jar"/>    
    </target>
	
	<!-- ================================= 
          target: jar              
         ================================= -->
    <target name="jar" depends="compile" description="Build a jar file">
        <jar destfile="${jar.path}" basedir="${classes.dir}">
        </jar>
    </target>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="depends" description="Basic common project">
        
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: depends                      
         - - - - - - - - - - - - - - - - - -->
    <target name="depends">
    </target>

</project>
